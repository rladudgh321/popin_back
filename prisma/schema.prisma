generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Cart {
  idx    String @db.Uuid @unique
  product   String? @default("") 
  user      User     @relation(fields: [userId], references: [idx])
  userId    String   @db.Uuid @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  idx    String @db.Uuid @unique
  id       String   @unique
  password String
  email   String?   @unique
  name    String?
  phone    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 
  cart   Cart?
  refresh Refresh?
}

model Refresh {
  idx    String @db.Uuid @unique
  user      User     @relation(fields: [userId], references: [idx])
  userId String @db.Uuid @unique
  token  String @db.Uuid @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}